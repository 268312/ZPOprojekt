<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.projektzpo.LoginFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/login_view">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_RegisterFragment"
            app:destination="@id/RegisterFragment"/>
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.projektzpo.MainFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/main_view">
        <action
            android:id="@+id/action_SecondFragment_to_AnalysisFragment"
            app:destination="@id/AnalysisFragment"/>
        <action
            android:id="@+id/action_SecondFragment_to_CalendarFragment"
            app:destination="@id/CalendarFragment"
            />
        <action
            android:id="@+id/action_SecondFragment_to_AvatarFragment"
            app:destination="@id/AvatarFragment"/>
    </fragment>
    <fragment
        android:id="@+id/RegisterFragment"
        android:name="com.example.projektzpo.RegisterFragment"
        android:label="Register Fragment"
        tools:layout="@layout/fragment_register">
    </fragment>
    <fragment
        android:id="@+id/AnalysisFragment"
        android:name="com.example.projektzpo.AnalysisFragment"
        android:label="Analysis Fragment"
        tools:layout="@layout/fragment_analysis">
        <action
            android:id="@+id/action_AnalysisFragment_to_SecondFragment"
            app:destination="@id/SecondFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/CalendarFragment"
        android:name="com.example.projektzpo.CalendarFragment"
        android:label="Calendar Fragment"
        tools:layout="@layout/fragment_calendar">
        <action
            android:id="@+id/action_CalendarFragment_to_SecondFragment"
            app:destination="@id/SecondFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/AvatarFragment"
        android:name="com.example.projektzpo.AvatarFragment"
        android:label="Avatar Fragment"
        tools:layout="@layout/fragment_avatar"
        >
        <action
            android:id="@+id/action_AvatarFragment_to_SecondFragment"
            app:destination="@id/SecondFragment"/>
        <action
            android:id="@+id/action_Logout"
            app:destination="@id/FirstFragment"
            />
    </fragment>

</navigation>